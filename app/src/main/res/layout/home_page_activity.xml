<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/backgroundColor"
                                             tools:context="com.nevmem.moneysaver.HomePageActivity">

    <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/addRecordButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="@+id/homePage"
            android:text="Add" android:background="@drawable/add_button" android:textSize="18sp"
            android:onClick="addButtonClicked"/>
    <ScrollView
        android:id="@+id/homePage"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout android:id="@+id/topLinear" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/user_profile" android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     app:layout_constraintTop_toTopOf="parent" android:id="@+id/include"
                     app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                     android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

            <ProgressBar android:id="@+id/loadingBar" android:visibility="gone" tools:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:paddingBottom="8dp" android:paddingTop="8dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/mainList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/include"/>

            <Button
                    android:id="@+id/button"
                    android:layout_width="180dp"
                    android:layout_height="38dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="loadButtonClick"
                    android:text="@string/load_data"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:background="@drawable/load_more_btn_background"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
