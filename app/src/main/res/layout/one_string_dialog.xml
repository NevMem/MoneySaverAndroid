<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/cardColor"
        android:elevation="@dimen/stdElevation"
        android:paddingTop="16dp" android:paddingBottom="16dp"
        android:paddingStart="24dp" android:paddingEnd="24dp"
        android:clickable="true" android:focusable="true"
        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/header" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:textColor="@color/default_white_color" android:textSize="26sp"
            android:gravity="center" tools:text="Header"
            android:layout_gravity="center"
    />
    <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/description"
            android:padding="10dp"
            android:textColor="@color/secondary_white_color"
            android:gravity="center"
            tools:text="Description"
    />
    <EditText
            android:hint="Enter string"
            android:inputType="text"
            android:id="@+id/editText" android:focusable="true"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@color/default_white_color"
            android:textColorHint="@color/secondary_white_color"
    />
    <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:layout_height="wrap_content" android:layout_width="110dp"
                android:background="@drawable/dismiss_button_background" android:id="@+id/cancelButton"
                android:text="@string/small_cancel_string"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start"
                android:textColor="@color/dismiss_button_text_color"
        />
        <Button
                android:layout_height="wrap_content" android:layout_width="110dp"
                android:background="@drawable/ok_button_background" android:id="@+id/okButton"
                android:text="@string/small_ok_string"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/default_white_color"
        />
    </RelativeLayout>
</LinearLayout>