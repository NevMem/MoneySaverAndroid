<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9A000000"
        android:focusable="true"
        android:clickable="true"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/cardColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="@dimen/stdElevation"
    >
        <TextView android:id="@+id/dialogHeader" android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingStart="10dp" android:paddingEnd="10dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:textSize="20sp"
                  android:text="Specify fields for new template"
                  android:gravity="center"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Template name"
                android:ems="10"
                android:id="@+id/newTemplateName" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/dialogHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Template value"
                android:ems="10"
                android:inputType="numberDecimal"
                android:id="@+id/newTemplateValue" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/newTemplateName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout android:id="@+id/pickers"
                      android:layout_width="0dp" android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/newTemplateValue" android:orientation="horizontal"
                      android:weightSum="5"
                      android:padding="10dp"
        >
            <Spinner android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"
                     android:id="@+id/newTemplateTag" android:spinnerMode="dialog"/>
            <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <Spinner android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"
                     android:id="@+id/newTemplateWallet" android:spinnerMode="dialog"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp" android:layout_height="48dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pickers"
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayout4">
            <Button
                    android:id="@+id/dismissButton" android:layout_width="120dp" android:layout_height="wrap_content"
                    android:background="@drawable/dismiss_button_background"
                    android:layout_weight="1"
                    android:text="Cancel"
            />
            <Space
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="2"
            />
            <Button
                    android:id="@+id/okButton" android:layout_width="120dp" android:layout_height="wrap_content"
                    android:background="@drawable/ok_button_background"
                    android:layout_weight="1"
                    android:text="Ok"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>