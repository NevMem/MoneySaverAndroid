<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/backgroundColor"
>

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:id="@+id/anchor" app:layout_constraintBottom_toTopOf="@+id/mainPageNavigation"/>

    <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mainPageNavigation"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/main_page_navigation"
            app:itemTextColor="@android:color/white"
            app:itemIconTint="@android:color/white"
            app:itemBackground="@color/specialColor"
    />

</android.support.constraint.ConstraintLayout>