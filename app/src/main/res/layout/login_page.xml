<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#202020">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginField"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/Login" android:textColor="@android:color/white"
            android:textColorLink="@color/mainColor" android:textColorHint="#aaa"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/errors"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginField" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/passwordString" android:textColor="@android:color/white"
            android:textColorLink="@color/mainColor" tools:textColorHint="#aaa"
    />
    <Button
            android:text="@string/loginPage_loginButtonText"
            android:layout_width="115dp"
            android:layout_height="54dp"
            android:id="@+id/loginButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField"
            style="@style/SpecialButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="onLoginButtonClick"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:id="@+id/appName" android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center|start"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/mainColor" android:textColor="#fff"/>
    <TextView
            android:layout_width="221dp"
            android:layout_height="79dp"
            android:id="@+id/errors" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/appName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:gravity="center" android:textColor="@color/errorColor"/>
</android.support.constraint.ConstraintLayout>