<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="#9A000000"
                                             android:focusable="true"
                                             android:clickable="true"
>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:padding="20dp"
                                                 android:background="@color/cardColor"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="20dp"
                                                 android:layout_marginEnd="20dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:elevation="@dimen/stdElevation"
    >
        <TextView android:id="@+id/popupMessage" android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingStart="10dp" android:paddingEnd="10dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:textSize="20sp"
                  tools:text="Some popup text"
                  android:gravity="center"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp"
        />
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@id/popupMessage"
        >
            <Button android:id="@+id/okButton" android:layout_width="120dp" android:layout_height="wrap_content"
                    android:background="@drawable/ok_button_background"
                    android:layout_weight="1"
                    android:text="Ok"
            />
            <Space android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_weight="2"
            />
            <Button android:id="@+id/dismissButton" android:layout_width="120dp" android:layout_height="wrap_content"
                    android:background="@drawable/dismiss_button_background"
                    android:layout_weight="1"
                    android:text="Cancel"
            />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>