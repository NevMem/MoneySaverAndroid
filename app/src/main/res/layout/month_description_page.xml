<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardColor"
        android:padding="16dp"
        android:transitionName="cardTransition"
>
    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/headerText" tools:text="Month overview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:transitionName="headerTransition"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
    />
    <com.nevmem.moneysaver.views.PieChart
            android:id="@+id/chart"
            app:chartBackground="@color/cardColor"
            android:layout_width="170dp" android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerText"
            android:transitionName="chartTransition"
    />
    <LinearLayout
            android:id="@+id/anchor"
            app:layout_constraintTop_toBottomOf="@id/chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            tools:visibility="visible"
            android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:weightSum="4"
                      android:paddingTop="17dp" android:paddingBottom="17dp"
        >
            <TextView android:layout_width="0dp" android:layout_weight="3" android:layout_height="wrap_content"
                      android:text="Total:" android:textSize="18sp"
            />
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/monthSpend" android:textSize="18sp"
                    android:layout_width="0dp" android:layout_height="wrap_content"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:weightSum="4"
                      android:paddingTop="17dp" android:paddingBottom="17dp"
        >
            <TextView android:layout_width="0dp" android:layout_weight="3" android:layout_height="wrap_content"
                      android:text="Daily:" android:textSize="18sp"
            />
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/monthDailySpend" android:textSize="18sp"
                    android:layout_width="0dp" android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>