<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Please choose your login, it will be used to log into application"
                android:textSize="20sp"
                android:paddingTop="16dp" android:paddingBottom="16dp"
                android:textColor="@color/themeGrayedColor"
        />
        <FrameLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="32dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/loginField"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:hint="@string/Login"
                    android:textColor="@color/themeColor" android:textColorHint="@color/themeGrayedColor"
                    app:layout_constraintTop_toBottomOf="@id/nameField"
                    android:background="@drawable/edit_text_themed"
            />
            <ProgressBar
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:indeterminateTint="@color/themeColor"
                    android:id="@+id/checkingLogin"
                    android:visibility="gone"
            />
            <ImageView
                    android:id="@+id/successIcon"
                    android:layout_gravity="end|center"
                    android:src="@drawable/check_mark"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:visibility="gone"
            />
            <ImageView
                    android:id="@+id/errorIcon"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:src="@drawable/ic_cross"
                    android:visibility="gone"
            />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>